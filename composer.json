{
    "repositories": [
        {"type": "vcs", "url": "https://github.com/JonathanWdl/wdlspecials.git"},
        {"type": "vcs", "url":  "https://gitlab.com/JonathanWdl/mash-sitepackage.git"},
        {"type": "vcs", "url":  "https://gitlab.com/JonathanWdl/wdl-assortment.git"}
    ],
    "name": "apprenticeship/typo3",
    "description": "Typo3 instance for apprenticeship",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "require": {
        "typo3/cms-composer-installers": "^2.2",
        "typo3/cms-base-distribution": "^9.5",
        "bk2k/bootstrap-package": "10.0.x-dev",
        "jonathanwdl/wdlspecials": "dev-implement_owl_carousel",
        "mash-euskirchen/mash-sitepackage": "dev-develop",
        "jonathanwdl/wdlassortment": "dev-develop"

    },
    "config":{
        "cache-dir": ".Build/composer-cache",
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{vendor-dir}/typo3/cms",
            "web-dir": "wwwroot"
        },
        "patches": {
            "bk2k/bootstrap-package": {
                "Processes symlinked SCSS sources":
                "https://patch-diff.githubusercontent.com/raw/benjaminkott/bootstrap_package/pull/585.patch"
            }
        }
    },
    "require-dev": {
        "friendsoftypo3/extension-builder": "dev-master"
    }
}
